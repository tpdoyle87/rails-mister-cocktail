<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <h1><%= @cocktail.name %></h1>
        <% @cocktail.doses.each do |dose| %>
          <h3><%= dose.description %><span> <%= dose.ingredient.name %></span></h3>
          <%= link_to "Delete", dose , method: :delete, data: { confirm: "Are you Sure you want to delete this?"} %>
        <% end %>

      <%= link_to "Back", root_path %>
      <div class="full-screen">
        <%= render './doses/form', cocktail: [@cocktail, @dose] %>
      </div>
    </div>
  </div>
</div>
