<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 space">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.photo %>);">
        <div class="card-category">Popular</div>
        <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail, class: 'link' %></h2>
            <p>A popular drink</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
